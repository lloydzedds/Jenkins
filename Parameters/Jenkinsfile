pipeline {
    agent any
    parameters {
        choice (name: environment, choices["Test", "Dev", "Prod"])
    }
    stages {
        stage('git clone'){
            sh "git clone https://github.com/lloydzedds/Jenkins.git"
            sh """
                if [ $? -eq 0 ]
                then
                    echo "Git repo cloned successfully"
                fi
            """
        }
    }
}